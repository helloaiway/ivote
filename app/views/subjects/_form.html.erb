<!-- widget grid -->
<section id="widget-grid" class="">

  <% if @subject.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@subject.errors.count, "error") %> prohibited this subject from being saved:</h2>

      <ul>
      <% @subject.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- row -->
  <div class="row">
    <!-- NEW WIDGET START -->
    <article class="col-sm-12 col-md-12 col-lg-12">
        <!-- Widget ID (each widget will need unique ID)-->
        <div class="jarviswidget " id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false">
          <!-- widget options:
          usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">
  
          data-widget-colorbutton="false"
          data-widget-editbutton="false"
          data-widget-togglebutton="false"
          data-widget-deletebutton="false"
          data-widget-fullscreenbutton="false"
          data-widget-custombutton="false"
          data-widget-collapsed="true"
          data-widget-sortable="false"
  
          -->
          <header role="heading">
            <span class="widget-icon"> <i class="fa fa-eye"></i> </span>
            <h2>创建主题&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</h2>
            <ul class="nav nav-tabs pull-middle" id="widget-tab-1">
        
              <li class="active">
  
                <a href="#subject-main" data-toggle="tab"> <i class="fa fa-lg fa-arrow-circle-o-down"></i> <span class="hidden-mobile hidden-tablet"> 主题信息 </span> </a>
  
              </li>
  
              <li class="">
                <a href="#option-main" data-toggle="tab"> <i class="fa fa-lg fa-arrow-circle-o-up"></i> <span class="hidden-mobile hidden-tablet"> 投票选项 </span></a>
              </li>
  
            </ul>
            <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
          </header>
          <!-- widget div-->
          <div role="content">
  
            <!-- widget edit box -->
            <div class="jarviswidget-editbox">
              <!-- This area used as dropdown edit box -->
  
            </div>
            <!-- end widget edit box -->
  
            <!-- widget content -->
            <div class="widget-body">
              <div class="tab-content padding-10">
                <div class="tab-pane fade active in" id="subject-main">
                <%= simple_form_for(@subject, html: { class: 'form-horizontal'}, defaults: { input_html: { class: 'form-control'}, lable_html: { class: 'col-md-2 control-label' } }) do |f| %>
                  <fieldset>
                        <legend>基本信息</legend>
                        <div class="form-group">
                          <label class="col-md-2 control-label">主题名称</label>
                          <div class="col-md-10">
                            <%= f.input_field :name %>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-md-2 control-label">主题类别</label>
                          <div class="col-md-10">
                              <label class="checkbox-inline">
                                  <input type="checkbox" class="checkbox style-0">
                                  <span>教育</span>
                              </label>
                              <label class="checkbox-inline">
                                  <input type="checkbox" class="checkbox style-0">
                                  <span>金融</span>
                              </label>
                              <label class="checkbox-inline">
                                  <input type="checkbox" class="checkbox style-0">
                                  <span>电商</span>
                              </label>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-md-2 control-label">主题模板</label>
                          <div class="col-md-10">
                            <%= f.input_field :template_id, collection: @templates, prompt: "Choose a Template",  selected: @subject.template_id %>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-md-2 control-label">主题风格</label>
                          <div class="col-md-10">
                            <%= f.input_field :style_id, collection: @styles, prompt: "Choose a Style", selected: @subject.style_id  %>
                            
                            <div class="radio">
                                <label>
                                  <input type="radio" class="radiobox style-0" checked="checked" name="style-0">
                                  <span>Radiobox 1</span> 
                                </label>
                            </div>

                          </div>
                        </div>

                         <div class="form-group">
                          <label class="col-md-2 control-label">主题封面图片</label>
                          <div class="col-md-10">
                            <%= render :partial => '/uploads/basic' %>
                          </div>
                        </div>
                      
                      </fieldset>

                      <div class="form-actions">
                          <div class="row">
                            <div class="col-md-12">
                              <button class="btn btn-default" type="submit">
                                Cancel
                              </button>
                              <button class="btn btn-primary" type="submit">
                                <i class="fa fa-save"></i>
                                Submit
                              </button>
                            </div>
                          </div>
                        </div>
          
                    <% end %>
                  </div>

                  <div class="tab-pane fade" id="option-main">
                      <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>First Name</th>
                          <th>Last Name</th>
                          <th>Username</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>1</td>
                          <td>Mark</td>
                          <td>Otto</td>
                          <td>@mdo</td>
                        </tr>
                        <tr>
                          <td>2</td>
                          <td>Jacob</td>
                          <td>Thornton</td>
                          <td>@fat</td>
                        </tr>
                        <tr>
                          <td>3</td>
                          <td>Larry</td>
                          <td>the Bird</td>
                          <td>@twitter</td>
                        </tr>
                        <tr>
                          <td>4</td>
                          <td>Wise</td>
                          <td>Man</td>
                          <td>@myorange</td>
                        </tr>
                      </tbody>
                    </table>
                  </div>

                </div>
            </div>

        </div>

      </div>
    </article>
  </div>

</section>


<script>

$(".form_datetime").datetimepicker({format: 'yyyy-mm-dd hh:ii'});

</script>
