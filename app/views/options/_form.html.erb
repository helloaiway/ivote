  <h3>Add new option</h3>
<%= form_for(@option) do |f| %>
<%= f.hidden_field :subject, :value => @subject.id %>
  <% if @option.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@option.errors.count, "error") %> prohibited this option from being saved:</h2>
      <ul>
      <% @option.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :thumb %><br>
    <%= f.text_field :thumb %>
  </div>
  <div class="form-group">
    <%= f.label :select_counts %><br>
    <%= f.number_field :select_counts %>
  </div>
  <div class="form-group">
    <%= f.submit :class => 'btn btn-default' %>
  </div>
<% end %>
